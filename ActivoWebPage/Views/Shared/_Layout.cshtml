<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ActivoWebPage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ActivoWebPage.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar bg-dark border-bottom border-body">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <a class="navbar-brand" href="#">
                    <img src="~/images/logo_eventivo.png" alt="Logo" width="65" height="70" class="d-inline-block align-text-top">
                </a>
                <div class="d-flex">
                    <a class="nav-link" href="#">KULTUR & NÖJE</a>
                    <a class="nav-link" href="#">SPORT & FRILUFTSLIV</a>
                    <a class="nav-link" href="#">SÖK EVENT</a>
                    <a class="nav-link" href="#">LOGGA IN</a>
                </div>
                <div class="d-flex">
                    <a class="nav-link" href="#">Trollhättan</a>
                    <span class="navbar-text">&#47;</span>
                    <a class="nav-link" href="#">Västervik</a>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ActivoWebPage - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
