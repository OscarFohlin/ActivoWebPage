<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ActivoWebPage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />

</head>
<body>
    <header>
          <nav class="navbar bg-dark border-body">
              @*<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
              </button>*@
              <a class="navbar-brand" href="#">
                <img src="~/images/logo_eventivo.png" alt="Logo" width="65" height="70" class="d-inline-block align-text-top">
              </a>

              <div class="d-flex">
                  <a class="nav-link" asp-action="ThnCulture" asp-controller="Cities">KULTUR & NÖJE</a>
                  <a class="nav-link" asp-action="ThnSports" asp-controller="Cities">SPORT & FRILUFTSLIV</a>
              </div>


              <div class="nav-item dropdown">
                  <div class="d-flex align-items-center">
                      <img src="~/images/searchglass.svg" alt="Search" width="30" height="30">
                  </div>
                  <a class="nav-link" asp-action="ThnSearch" asp-controller="Cities">SÖK EVENT</a>
                  <div class="vr text-light" style="width: 3px;"></div>
                  <a class="nav-link" asp-action="MyProfile" asp-controller="Home">LOGGA IN</a>
                  <div class="vr text-light" style="width: 3px;"></div>
                  <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                      STAD
                  </a>

                  <ul class="dropdown-menu">
                      <li><a class="dropdown-item" asp-action="Trollhattan" asp-controller="Cities">Trollhättan</a></li>
                      <li><a class="dropdown-item" asp-action="Vastervik" asp-controller="Cities">Västervik</a></li>
                  </ul>
              </div>
              
        </nav>
    </header>

    <div class="content">
        @RenderBody()
    </div>

    <footer class="footer d-flex justify-content-between align-items-center py-3 my-4">
        <div class="footer-icons d-flex flex-column align-items-start">
            <a href="https://instagram.com" class="mb-2"><img class="logo-footer" src="~/images/logo-instagram.png"/><p class="footer-icon-text">Eventivo</p></a>
            <a href="https://twitter.com" class="mb-2"><img class="logo-footer" src="~/images/logo-twitter.png" /><p class="footer-icon-text">Eventivo</p></a>
            <a href="https://facebook.com" class="mb-2"><img class="logo-footer" src="~/images/logo-facebook.png" /></i><p class="footer-icon-text">Eventivo</p></a>
        </div>
        <div class="footer-nav">
            <ul class="nav justify-content-center">
                <li class="nav-item"><a href="#" class="nav-link">OM OSS</a></li>
                <li class="nav-item"><a href="#" class="nav-link">KONTAKT</a></li>
                <li class="nav-item"><a href="#" class="nav-link">SEKRETESS</a></li>
            </ul>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
